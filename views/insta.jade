extends layout

block content
  div.row
    div.col-md-6
      img(src= image1, width="250px")
      img(src= image2, width="250px")
      img(src= image3, width="250px")
      div
        br
        a.btn.btn-default(href="/") Change Photos

    div.col-md-6
      h1 Send Photo as a Postcard

      form(action="/send-postcard", method="post")
        div(class="form-group col-md-12")
          label Name
          input(
            type="text"
            class="form-control"
            name="name"
          )
        div(class="form-group col-md-12")
          label Address
          input(
            type="text"
            class="form-control"
            name="address"
          )
        div(class="form-group col-md-4")
          label City
          input(
            type="text"
            class="form-control"
            name="city"
          )
        div(class="form-group col-md-4")
          label State
          input(
            type="text"
            class="form-control"
            name="state"
          )
        div(class="form-group col-md-4")
          label Zip
          input(
            type="text"
            class="form-control"
            name="zip"
          )
        div(class="form-group col-md-12")
          label Message
          textarea(
            class="form-control"
            name="message"
          )
        div(class="form-group col-md-12")
          input(type="hidden", value=image1, name="image1")
          input(type="hidden", value=image2, name="image2")
          input(type="hidden", value=image3, name="image3")
          button(type="submit", class="btn btn-primary") Send Postcard
